---
import HeadingOne from "../HeadingOne.astro";
import Text from "../Text.astro";

const { content } = Astro.props;
---

<section class:list={["grid p-6 lg:pt-12 pb-12"]}>
  <div
    class="justify-self-center block md:grid grid-cols-2 max-w-screen-xl w-full"
  >
    <header class="col-span-2 md:col-span-1">
      <HeadingOne text={content.title} lineHeight />
      <HeadingOne text="full-stack developer." />
      <!-- <HeadingOne text="ui/ux designing." />
      <HeadingOne text="copywriting." />
      <HeadingOne text="based in calgary." /> -->
    </header>
    <div class="pt-4 lg:pt-0 lowercase">
      <Text text={content.description} />
      <div class="mt-3 grid gap-3">
        <strong>
          <Text text={"Strengths: " + content.strengths} textColor="" />
        </strong>
        <strong>
          <Text text={"Technologies: " + content.technologies} textColor="" />
        </strong>
        <Text text={"Role models: " + content.roleModels} />
        <Text text={"Hobbies: " + content.hobbies} />
        <Text text={"Interests: " + content.interests} />
      </div>
    </div>
    <h3
      class="text-2xl md:text-4xl lg:text-5xl col-span-2 text-neutral-focus text-center pt-6"
    >
      <a
        class="link no-underline text-xl lg:text-4xl"
        href="mailto:emoniebaut@outlook.com">{content.contact} &hearts;</a
      >
    </h3>
  </div>
</section>
