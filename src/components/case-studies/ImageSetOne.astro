---
import HeadingOne from "../HeadingOne.astro";

export interface IImageSetOneProps {
  bgColorOne: string;
  bgColorTwo: string;
  bgColorThree: string;
}

const { content, bgColorOne, bgColorTwo, bgColorThree } = Astro.props;
---

<section class="grid p-6">
  <div class="justify-self-center grid max-w-screen-xl w-full">
    <div class="grid grid-rows-3 gap-4 lg:grid-rows-2 lg:grid-cols-2">
      <div class:list={["lg:col-span-2", bgColorOne]}>
        <img src={content.isoione} />
      </div>
      <div class:list={["flex", "items-center", bgColorTwo]}>
        <img src={content.isoitwo} />
      </div>
      <div class:list={["flex", "items-center", bgColorThree]}>
        <img src={content.isoithree} />
      </div>
    </div>
  </div>
</section>
