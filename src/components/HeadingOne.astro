---
export interface ICaseStudyLayout {
  lineHeight?: boolean;
  pl?: string;
  text: string;
  color: string;
}
const { lineHeight, pl, text, color } = Astro.props;
---

<h1
  class:list={[
    "text-4xl",
    "lg:text-8xl",
    "xl:text-9xl",
    lineHeight ? null : "leading-[0]",
    color,
  ]}
>
  <span class:list={[pl]}>
    {text}
    <slot />
  </span>
</h1>
