---
export interface Props {
  title: string;
}
import "../styles/global.css";

const { title } = Astro.props as Props;
---

<!DOCTYPE html>
<html lang="en" data-theme="business" class="bg-[#2A466C]">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <title>{title}</title>
  </head>
  <body class="font-Questrial h-screen bg-[#2A466C]" data-theme="business">
    <slot />
  </body>
</html>
