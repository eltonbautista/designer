---
export interface Props {
  title: string;
}
import ModalMenu from "../components/ModalMenu.astro";
import Navbar from "../components/Navbar.astro";
import "../styles/global.css";

const { title } = Astro.props as Props;
---

<!DOCTYPE html>
<html lang="en" data-theme="business" class="h-fit min-h-screen">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <title>{title}</title>
  </head>
  <body
    class="font-Questrial h-full min-h-full bg-[#2A466C]"
    data-theme="business"
  >
    <header class="grid">
      <nav class="bg-base-100 xl:flex xl:justify-center">
        <Navbar />
      </nav>
    </header>
    <slot />
    <input type="checkbox" id="my-modal-5" class="modal-toggle" />
    <div class="modal max-h-screen max-w-screen">
      <div class="modal-box min-w-[100%] min-h-screen">
        <ModalMenu />
      </div>
    </div>
    <script defer is:inline>
      // when modal is closed, allow body to scroll again
      const modalLabel = document.querySelector("#modal-label");
      modalLabel.addEventListener("click", function () {
        body.style.overflowY = "auto";
      });
    </script>
  </body>
</html>
